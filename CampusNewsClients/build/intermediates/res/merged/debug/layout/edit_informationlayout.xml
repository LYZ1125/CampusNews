<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/transparent"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/edit_information_all_layout"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="44dip">
                <ImageView
                    android:id="@+id/edit_information_back"
                    android:layout_alignParentLeft="true"
                    android:src="@mipmap/gray_back_mipmap"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:gravity="center_horizontal"
                    android:textSize="22sp"
                    android:textColor="#454545"
                    android:text="修改个人资料"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true" />

                <TextView
                    android:id="@+id/complete"
                    android:textSize="22sp"
                    android:gravity="center_vertical"
                    android:textColor="#00a0e9"
                    android:text="完成"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="13dp" />
            </RelativeLayout>

            <ImageView
                android:layout_marginTop="10dp"
                style="@style/bb_information_image_bottom"/>
            <LinearLayout
                android:background="#ffffff"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="100dp"
                    android:layout_height="match_parent">
                    <com.baibian.tool.RoundImageView
                        android:layout_marginLeft="3dp"
                        android:background="@drawable/default_round_head"
                        android:layout_width="100dp"
                        android:layout_height="90dp" />
                    <TextView
                        android:layout_gravity="center_horizontal"
                        android:text="编辑头像"
                        android:textColor="#636263"
                        android:layout_width="57dp"
                        android:layout_height="25dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginLeft="14dp"
                    android:background="@color/transparent"
                    android:layout_marginTop="12dp"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                    <LinearLayout

                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:text="用户名："
                            android:textColor="#636263"
                            android:layout_width="57dp"
                            android:layout_height="25dp" />
                        <EditText
                            android:id="@+id/user_name_edittext"
                            android:maxLength="12"
                            android:background="@null"
                            android:singleLine="true"
                            android:layout_width="151dp"
                            android:layout_height="25dp" />
                    </LinearLayout>
                    <ImageView     android:layout_marginTop="3dp"           style="@style/bb_information_image_bottom"/>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="275dp"
                        android:layout_height="25dp">
                        <TextView
                            android:text="性别："
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:text="男"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:text="女"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <LinearLayout

                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:text="简介："
                            android:textColor="#636263"
                            android:layout_width="57dp"
                            android:layout_height="25dp" />
                        <EditText
                            android:maxLength="35"
                            android:hint="一句话"
                            android:background="@null"
                            android:singleLine="true"
                            android:layout_width="151dp"
                            android:layout_height="25dp" />
                    </LinearLayout>
                    <ImageView             style="@style/bb_information_image_bottom"/>

                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:layout_marginTop="10dp"
                style="@style/bb_information_image_bottom"/>
            <LinearLayout
                android:layout_marginLeft="3dp"
                android:layout_marginTop="3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/gray_house"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />
                <TextView
                    android:textSize="15sp"
                    android:text="居住地"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/house_LinearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </LinearLayout>
            <include
                android:id="@+id/add_house_layout"
                layout="@layout/edit_information_listitem_bottom"/>
            <LinearLayout
                android:layout_marginLeft="3dp"
                android:layout_marginTop="3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/gray_bag"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />
                <TextView
                    android:textSize="15sp"
                    android:text="擅长领域"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/advantage_LinearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </LinearLayout>
            <include
                android:id="@+id/add_advantage_layout"
                layout="@layout/edit_information_listitem_bottom"/>


        </LinearLayout>
    </ScrollView>



</LinearLayout>
